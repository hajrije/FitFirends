@page
@model FitFriends.Pages.TrashModel
@{
    ViewData["Title"] = "Trash";


    if (!Model.PostSummaries.Any())
    {
        <div class="jumbotron">
            <p>There are no posts in your trash bin.</p>
        </div>
    }
    else
    {
        foreach (var post in Model.PostSummaries)
        {
            <article>
                <div class="col-md-12">
                    <h2><a asp-page="/Post" asp-route-id="@post.Id" >@post.Title</a></h2>
                    <h5 class="date text-muted">@post.PublishTime</h5>
                    <p class="lead">@post.Excerpt</p>
                    <h3><a asp-page="/post" asp-route-id="@post.Id" ><i class="fas fa-comments"></i> @post.CommentCount</a></h3>
                </div>
            </article>
        }
    }
}







